<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_big"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/login_top_margin_left"
            android:layout_marginRight="@dimen/login_top_margin_right"
            android:layout_marginTop="@dimen/login_top_margin_top">

            <ImageView
                android:id="@+id/back_to_homescreen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:background="@drawable/icon_back_login" />

            <ImageView
                android:id="@+id/add_new_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/ico_plus" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="@dimen/login_line_1_margin_top"
            android:background="@color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@null"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtDauSo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/login_txtDauSo_margin_left"
                android:gravity="center"
                android:text="+84"
                android:textAppearance="?android:textAppearanceLarge"
                android:textColor="@color/white"
                android:textSize="@dimen/login_textsize_txtDauSo" />

            <EditText
                android:id="@+id/phone_in_login"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="3"
                android:background="@null"
                android:hint="@string/login_phone_number"
                android:numeric="integer"
                android:paddingLeft="@dimen/login_txtPhone_padding_left"
                android:textAppearance="?android:textAppearanceLarge"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="@dimen/login_textsize_txtDauSo" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="0dp"
            android:background="@color/white" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/password"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="9.5"
                android:background="@null"
                android:ems="10"
                android:hint="@string/login_password"
                android:inputType="textPassword"
                android:paddingLeft="@dimen/login_txtPass_padding_left"
                android:paddingRight="@dimen/login_txtPass_padding_right"
                android:textAppearance="?android:textAppearanceLarge"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="@dimen/login_txtsize_txtPass" />

            <ImageView
                android:id="@+id/btnEyes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/login_icon_eyse_margin_right"
                android:layout_weight="0.5"
                android:background="@drawable/ico_eyes" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_smoke"
        android:orientation="vertical">

        <Button
            android:id="@+id/login_button"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="@dimen/login_btnLogin_margin_left"
            android:layout_marginRight="@dimen/login_btnLogin_margin_right"
            android:layout_marginTop="@dimen/login_btnLogin_margin_top"
            android:background="@drawable/login_button_effect"
            android:drawableRight="@drawable/ico_angle_right"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/login_btnLogin_padding_left"
            android:paddingRight="@dimen/login_btnLogin_padding_right"
            android:text="@string/login_button_text"
            android:textColor="@color/white"
            android:textSize="@dimen/login_txtsize_btnLogin" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/login_bottom_margin_left"
            android:layout_marginRight="@dimen/login_bottom_margin_right"
            android:layout_marginTop="@dimen/login_bottom_margin_top"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/forget_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/login_password_forget"
                    android:textColor="@color/color_register_and_forget"
                    android:textSize="@dimen/login_bottom_textsize" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/register"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/login_register_text"
                    android:textColor="@color/color_register_and_forget"
                    android:textSize="@dimen/login_bottom_textsize" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>