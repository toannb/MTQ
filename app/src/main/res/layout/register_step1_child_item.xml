<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/register_step1_child_margin_left"
    android:background="@color/white"
    android:orientation="horizontal">

    <View
        android:layout_width="5dp"
        android:layout_height="match_parent"
        android:background="#AAD4A4" />

    <TextView
        android:id="@+id/register_borrower_textview_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/register_step1_childtext_margin"
        android:layout_marginLeft="@dimen/register_step1_childtext_margin"
        android:layout_marginRight="@dimen/register_step1_childtext_margin"
        android:layout_marginTop="@dimen/register_step1_childtext_margin"
        android:gravity="center_vertical"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="#58595B"
        android:textSize="@dimen/register_step1_childtext_textsize" />

</LinearLayout>