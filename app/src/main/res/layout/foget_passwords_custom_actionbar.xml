<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageButton
        android:id="@+id/back_fogetPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/foget_passwords_top_margin_left"
        android:background="@drawable/registor_close_button"
        android:src="@drawable/ico_angle_left" />

    <TextView
        android:id="@+id/txtTitleFogetPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Quên mật khẩu"
        android:textColor="@color/white"
        android:textSize="@dimen/foget_passwords_top_textsize_title" />

    <ImageButton
        android:id="@+id/cancel_fogetPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/foget_passwords_top_margin_right"
        android:background="@drawable/registor_close_button"
        android:src="@drawable/ico_close" />
</RelativeLayout>